{
  "exclude": ["node_modules"],
  "include": ["src", "webpack.config.ts", "jest-setup.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": ["./src"],
      "assets": ["./src/assets"],
      "utils": ["./src/utils"]
    },
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "types": ["webpack-env"]
}
